# Git module contribution to Prezto configuration
# This file will be merged with the main .zpreztorc file

# Enable git module in Prezto
zstyle ':prezto:load' pmodule \
  'git'

# Git module configuration
zstyle ':prezto:module:git:alias' skip 'yes'
zstyle ':prezto:module:git:log:medium' format '%C(bold)Commit:%C(reset) %C(green)%H%C(red)%d%n%C(bold)Author:%C(reset) %C(blue)%an <%ae>%n%C(bold)Date:%C(reset) %C(yellow)%ai (%ar)%C(reset)%n%+B'
zstyle ':prezto:module:git:log:oneline' format '%C(green)%h%C(reset) %s%C(red)%d%C(reset)'
zstyle ':prezto:module:git:log:brief' format '%C(green)%h%C(reset) %s%n%C(blue)(%ar by %an)%C(red)%d%C(reset)%n'
zstyle ':prezto:module:git:status:ignore' submodules 'yes'
